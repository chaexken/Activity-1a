<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:text="Yellow"
        app:backgroundTint="#E1CC10"
        app:layout_constraintBottom_toTopOf="@+id/btn_violet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_violet"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:layout_marginTop="132dp"
        android:text="Violet"
        app:backgroundTint="#6124CD"
        app:layout_constraintBottom_toTopOf="@+id/btn_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:text="Blue"
        app:backgroundTint="#293578"
        app:layout_constraintBottom_toTopOf="@+id/btn_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.908"
        app:strokeColor="#0C0C0C"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:text="Green"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toTopOf="@+id/btn_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919"
        app:strokeColor="#0C0C0C"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_marginTop="468dp"
        android:text="Red"
        app:backgroundTint="#972020"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#0C0C0C"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_marginTop="576dp"
        android:text="Reset"
        android:textColor="#020101"
        app:backgroundTint="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#0C0C0C"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>